{% extends 'base.html.twig' %}

{% block title %} Candidature de : {{ candidature.clients.nom  }} {% endblock %}

{% block body %}

    <main role="main">

		<section class="jumbotron text-center bg-light pt-4 pb-4">
			<div class="container">
				<h1 class="jumbotron-heading"> Poste de : {{ candidature.offres.nom  }} </h1>
			</div>
		</section>

        <div class="album py-3">
			<div class="container col-md-6">

                <div class="m-auto">
                    <h3> Information sur la candidature de : {{ candidature.clients.nom  }}</h3>
                    <p>
                        Email : {{ candidature.clients.email  }} <br/>
                        Téléphone : {{ candidature.clients.phone  }} <br/>
                        TJM : {{ candidature.clients.tjm  }} € <br/> 
                        cv  : <a href="{{ asset('upload/cv/' ~ candidature.clients.cvName) }}" target="_blank">voir le cv</a><br/>
                        Profil(s):
                            {% if not candidature.clients.skills is same as([]) %}
                                {% for skills in candidature.clients.skills %}
                                    <span class="badge badge-pill bg-secondary">{{ skills.nom }}</span>
                                {% endfor %}
                            {% else %}
                                <p> Aucun profil trouvé !</p>
                            {% endif %}
                        <br/><br/>
                        Message du candidat : <br/>
                        {{ candidature.message  }}
                    </p>

                    <p>
                        <a  href="{{ path('offres.valider.candidature', {id: candidature.id}) }}" class="btn btn-success btn-sm"> Retenir  la candidature</a>
                        <a  href="{{ path('offres.refuser.candidature', {id: candidature.id}) }}" class="btn btn-danger btn-sm"> Refuser la candidature </a>
                    </p>
                </div>

            </div>
        </div>
    </main>

{% endblock %}

