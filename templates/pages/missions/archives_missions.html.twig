{% extends 'base.html.twig' %}

{% block title %} Missions acrhivés {% endblock %}

{% block body %}
	<main role="main">
		<section class="jumbotron text-center bg-light pt-4 pb-4">
			<div class="container">
				<h1 class="jumbotron-heading"> Missions acrhivees </h1>
			</div>
		</section>

		<div class="album bg-white">
			<div class="container">
				{% if not missions.items is same as([]) %}
					
					<div class="count mt-4 mb-4"> Vous avez archivé
						{{ missions.getTotalItemCount }} mission(s)
					</div>

					<table class="table table-striped table-bordered">
						<thead class="thead-dark">
							<tr>
								<th scope="col">Ref mission</th>
								<th scope="col">Intitulé</th>
								<th scope="col">Démarrage</th>
								<th scope="col">Lieu</th>
								<th scope="col">TJM</th>
								<th scope="col"> CV </th>
								<th scope="col" colspan="4">Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for mission in missions %}
								<tr>
									<th scope="row">{{ mission.id }}</th>
									<td> <a href="{{ path('offres.edit', { id: mission.id }) }}" >{{mission.nom}}</a> </td>
									<td>{{ mission.startDateAT|date('d/m/Y') }}</td>
									<td>{{ mission.lieuMission }}</td>
									<td>
										{{ mission.tarif }} €
									</td>	                                                                                    
									<td><a  href="{{ path('offres.candidaturesOffre', {id: mission.id, slug: mission.slug}) }}" >  {{ mission.nbCandidatures is not null ? mission.nbCandidatures : 0 }} Candidatures  </a> </td>
									
									{% if is_granted("offre_edit", mission)  %}
										{# <td>
											<a  href="{{ path('offres.desarchiver_offre', {id: mission.id}) }}" class="btn btn-primary btn-sm"> Désarchiver </a>
										</td> #}
										<td>
											<a href="{{ path('offres.activer_offre', { id: mission.id }) }}" class="btn btn-success  btn-sm">Publier</a>
										</td>
										<td>
											<a href="{{ path('offres.edit', { id: mission.id }) }}" class="btn btn-info btn-sm">Modifier</a>
										</td>
									{% endif %}

									{% if is_granted("offre_delete", mission)  %}
										<td>
											<form method="post" action="{{ path('offres.delete', { id: mission.id }) }}" onsubmit="return confirm('Êtes-vous sur de vouloir supprimer cette mission ?');" >
												<input type="hidden" name="_method" value="DELETE">
												<button type="submit" class="btn btn-danger btn-sm"> Supprimer </button>
											</form> 
										</td>
									{% endif %}
								</tr>
							{% endfor %}
						</tbody>
					</table>

					<div class="navigation d-flex justify-content-center mt-4">
						{{ knp_pagination_render(missions) }}
					</div>

				{% else %}
					<h4 class=" my-3"> Aucune mission archivée !</h4>

					<a href="{{ path('offres.create') }}" class="btn btn-primary mb-3">
						Créer une mission
					</a>
				{% endif %}
			</div>
		</div>

	</main>
{% endblock %}
