{% extends 'base.html.twig' %}

{% block title %}Skills
{% endblock %}

{% block body %}
	<main role="main">

		<section class="jumbotron text-center bg-light pt-4 pb-4">
			<div class="container">
				<h1 class="jumbotron-heading"> 
					{{ skill.nom }}
				</h1>
			</div>
		</section>

		<div class="album bg-white">
			<div class="row">
                <div class="col-6 mx-auto my-3">
				
					<table class="table">
						<tbody>
							<tr>
								<th>Id</th>
								<td>{{ skill.id }}</td>
							</tr>
							<tr>
								<th>Nom</th>
								<td>{{ skill.nom }}</td>
							</tr>
							<tr>
								<th>Description</th>
								<td>{{ skill.content }}</td>
							</tr>
						</tbody>
					</table>

					<div>
						<a class="btn btn-success my-3" href="{{ path('skills.index') }}">Liste des comp√©tences</a>
						<a class="btn btn-primary my-3" href="{{ path('skills.edit', {'id': skill.id}) }}">Modifier</a>
					</div>

				</div>
			</div>
		</div>

	</main>
{% endblock %}
