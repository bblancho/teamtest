{% extends 'base.html.twig' %}

{% block title  "Formulaire de modification des informations personnelles" %}

{% block body %}
	<main>
		<section class="jumbotron text-center bg-light pt-4 pb-4">
			<div class="container">
				<h1 class="jumbotron-heading"> modifier mes informations personnelles </h1>
			</div>
		</section>

		<div class="album bg-white">
			<div class="container">
				{{ form_start(form) }}

					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								{{ form_row(form.nom) }}
							</div>

							<div class="form-group">
								{{ form_row(form.secteurActivite) }}
							</div>

{#							{# <div class="form-group">#}
{#								{{ form_row(form.siret) }}#}
{#							</div> #}

							<div class="form-group">
								{{ form_row(form.adresse) }}
							</div>

							<div class="form-group">
								{{ form_row(form.cp) }}
							</div>

							<div class="form-group">
								{{ form_row(form.ville) }}
							</div>

						</div>

						<div class="col-md-6">
							<div class="form-group">
								{{ form_row(form.description) }}
							</div>

							<div class="form-group">
								{{ form_row(form.phone) }}
							</div>

							<div class="form-group">
								{{ form_row(form.nomContact) }}
							</div>

							<div class="form-group">
								{{ form_row(form.phoneContact) }}
							</div>

							<div class="form-group">
								{{ form_row(form.isNewsletter) }}
							</div>

							<div class="form-group mt-4">
								<button class="btn btn-lg btn-primary mb-4" type="submit">
									Modifier
								</button>
							</div>
						</div>
					</div>
					
				{{ form_rest(form) }}
				{{ form_end(form) }}
			</div>
		</div>
	</main>
{% endblock %}
