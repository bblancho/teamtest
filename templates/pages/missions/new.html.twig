{% extends "base.html.twig" %}

{% block title %}
	Création d'une mission
{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="mt-4">
			Création d'une mission
		</h1>

		{{ form_start(form) }}
			<div class="row mb-2">
				<div class="col-md-6">
					<div class="form-group">
						{{ form_label(form.nom) }}
						{{ form_widget(form.nom) }}
						<div class="form-error">
							{{ form_errors(form.nom) }}
						</div>
					</div>
					<div class="form-group">
						{{ form_label(form.refMission) }}
						{{ form_widget(form.refMission) }}
						<div class="form-error">
							{{ form_errors(form.refMission) }}
						</div>
					</div>
					<div class="form-group">
						{{ form_label(form.description) }}
						{{ form_widget(form.description) }}
						<div class="form-error">
							{{ form_errors(form.description) }}
						</div>
					</div>
					<div class="form-group mt-3">
						{{ form_label(form.startDateAT) }}
						{{ form_widget(form.startDateAT) }}
						<div class="form-error">
							{{ form_errors(form.startDateAT) }}
						</div>
					</div> 
					<div class="form-group">
						{{ form_label(form.lieuMission) }}
						{{ form_widget(form.lieuMission) }}
						<div class="form-error">
							{{ form_errors(form.lieuMission) }}
						</div>
					</div>
					<div class="form-group">
						{{ form_label(form.tarif) }}
						{{ form_widget(form.tarif) }}
						<div class="form-error">
							{{ form_errors(form.tarif) }}
						</div>
					</div>
					<div class="form-group mt-3">
						{{ form_label(form.isActive) }}
						{{ form_widget(form.isActive) }}
						<div class="form-error">
							{{ form_errors(form.isActive) }}
						</div>
					</div>
					<div class="form-group">
						{{ form_label(form.experience) }}
						{{ form_widget(form.experience) }}
						<div class="form-error">
							{{ form_errors(form.experience) }}
						</div>
					</div>
				</div>

				<div class="col-md-6">
					<div class="form-group">
						{{ form_label(form.profil) }}
						{{ form_widget(form.profil) }}
						<div class="form-error">
							{{ form_errors(form.profil) }}
						</div>
					</div>

					<div class="form-group">
						{{ form_label(form.duree) }}
						{{ form_widget(form.duree) }}
						<div class="form-error">
							{{ form_errors(form.duree) }}
						</div>
					</div> 
					<div class="form-group">
						{{ form_label(form.contraintes) }}
						{{ form_widget(form.contraintes) }}
						<div class="form-error">
							{{ form_errors(form.contraintes) }}
						</div>
					</div>
					
					<div class="form-group">
						{{ form_row(form._token) }}
					</div>
				</div>

				<button class="btn btn-primary mt-4" type="submit">Créer la mission</button>
			</div>
		{{ form_end(form) }}
		
	</div>
{% endblock %}
