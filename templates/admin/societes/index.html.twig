{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}

	<div class="container">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}
		
		{% if not missions.items is same as([]) %}
			<h1>Nos derniéres missions</h1>

			<div class="album py-5 bg-body-tertiary px">
				
				<div class="row mb-2">
					<div class="count"> Votre recherche renvoie  
						{{ missions.getTotalItemCount }} résultat(s)
					</div>
				</div>

				<div class="navigation d-flex   mt-2 mb-2">
					{{ knp_pagination_render(missions) }}
				</div>

				<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
					<div class="row mb-2 col-md-12">
						{% for mission in missions %}
						<div class="card shadow-sm">
							<div class="card-body">
								<div class=" border rounded mb-4 shadow-sm ">
									<div class="d-flex">
										<div class="col-md-9 p-4">
											<h4>
												{{ mission.nom | upper }}
											</h4>
											<h5>
												Nom du client : {{ mission.users.nom | capitalize  }}
											</h5>

											<div class="d-flex">
												<p class='logo_client'>
													<img src="https://photo.maxifoot.fr/rennes-doue-2.jpg"  alt="image"/>
												</p>	
												<p class="card-text">
													{{ mission.description | u.truncate(200, '...') }}
												</p> 
											</div>
											<div class="d-flex justify-content-between align-items-center">
												<div class="btn-group">
													<button type="button" class="btn btn-sm btn-outline-secondary">
														<a class="nav-link" href="{{ path('app_mission_show', {id: mission.id}) }}">voir l'offre
														</a>
													</button>
												</div>
												<small class="text-body-secondary">Publié il y a 3 jours </small>
											</div> <br/>
											
										</div>

