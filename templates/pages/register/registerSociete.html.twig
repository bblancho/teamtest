{% extends 'base.html.twig' %}

{% block title "Créer un compte société " %}

{% block body %}
	<div class="album py-5 connexion">
		<div class="container">
			<h1> Créer un compte société </h1>

			{{ form_start(registrationForm) }}

				<div class="row">
					<div class="col-md-6">
						<div class="form-group">
							{{ form_row(registrationForm.nom) }}
						</div>
						<div class="form-group">
							{{ form_row(registrationForm.secteurActivite) }}
						</div>
						
						<div class="form-group">
							{{ form_row(registrationForm.email) }}
						</div>

						<div class="form-group">
							{{ form_row(registrationForm.adresse) }}
						</div>

						<div class="form-group">
							{{ form_row(registrationForm.cp) }}
						</div>

						<div class="form-group">
							{{ form_row(registrationForm.description) }}
						</div>
					</div>

					<div class="col-md-6">
						<div class="form-group">
							{{ form_row(registrationForm.ville) }}
						</div>

						<div class="form-group">
							{{ form_row(registrationForm.phone) }}
						</div>

						<div class="form-group">
							{{ form_row(registrationForm.siret) }}
						</div>

						<div class="form-group">
							{{ form_row(registrationForm.nomContact) }}
						</div>

						<div class="form-group">
							{{ form_row(registrationForm.numContact) }}
						</div>

						<div class="form-group">
							{{ form_row(registrationForm.password) }}

							<p>
								<small>
									Votre mot de passe doit faire entre 8 et 20 caractères et contenir : </br>
									Au moins une majuscule </br>
									Au moins une minuscule </br>
									Au moins un chiffre </br>
									Et moins un caractère spécial : #?!@$%^&*- .
								</small>
							</P>
						</div>
					</div>
				</div>

				<button class="btn btn-primary mt-3 mb-2" type="submit"> S'inscrire </button> 

			{{ form_end(registrationForm) }}

			<div>
				<p>
					Déjà inscrit ? 
					<a href="{{ path('security.login') }}">
						Se connecter
					</a>
				</p>
			</div>
		</div>
	</div>

{% endblock %}
