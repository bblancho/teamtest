{% extends 'base.html.twig' %}

{% block title "Mes informations personnelles" %} 

{% block body %}
	<div class="container">
		<h1 class="text-center mt-4"> Mes informations personnelles </h1>

		{{ form_start(form) }}

			<div class="row">
				<div class="col-md-6 mx-auto">
					<div class="row">
						<div class="col-md-6">
							<div class="form-group mt-4">
								{{ form_row(form.nom) }}
							</div>

							<div class="form-group mt-4">
								{{ form_row(form.adresse) }}
							</div>

							<div class="form-group mt-4">
								{{ form_row(form.cp) }}
							</div>

							<div class="form-group mt-4">
								{{ form_row(form.ville) }}
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group mt-4">
								{{ form_row(form.phone) }}
							</div>

							<div class="form-group mt-4">
								{{ form_row(form.siren) }}
							</div>

							<div class="form-group mt-4">
								{{ form_row(form.tjm) }}
							</div>

							<div class="form-group mt-4">
								{{ form_row(form.cvFile) }}
							</div>

							<div class="form-group form-check">
								{{ form_row(form.isNewsletter) }}
							</div>
						</div>

						<button class="btn btn-lg btn-primary btn-block" type="submit">
							Modifier
						</button>
					</div>
				</div>
			</div>

		{{ form_rest(form) }}
		{{ form_end(form) }}
	</div>
{% endblock %}

