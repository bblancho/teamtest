{% extends "base.html.twig" %}

{% block title %}
	Modification de la mission {{ offre.nom }}
{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="mt-4">
			Edition de la mission : {{ offre.nom }}
		</h1>
		<div> <a  href="{{ path('offres.mes_offres', {id: offre.id}) }}" class="btn btn-primary"> Mes offres </a> </div>

		{{ form_start(form) }}
			<div class="row mb-2">
				<div class="col-md-6">
					<div class="form-group">
						{{ form_row(form.nom) }}
					</div>

					<div class="form-group">
						{{ form_row(form.description) }}
					</div>

					<div class="form-group">
						<div class="row  ">
							<div class="col-md-6">{{ form_row(form.refMission) }}</div> 
							<div class="col-md-6">{{ form_row(form.tarif) }}</div> 
							
						</div> 
					</div>
					
					<div class="form-group">
						<div class="row  ">
							<div class="col-md-6">{{ form_row(form.startDateAT) }}</div> 
							<div class="col-md-6">{{ form_row(form.experience) }}</div> 
						</div> 
					</div>
				</div>

				<div class="col-md-6">
					<div class="form-group">
						<div class="row  ">
							<div class="col-md-6">{{ form_row(form.lieuMission) }}</div> 
							<div class="col-md-6">{{ form_row(form.duree) }}</div> 
						</div> 
					</div>

					<div class="form-group">
						{{ form_row(form.profil) }}
					</div>

					<div class="form-group">
						{{ form_row(form.contraintes) }}
					</div>

					<div class="form-group mt-3">
						{{ form_row(form.isActive) }}
					</div>
					
					<div class="form-group">
						{{ form_row(form._token) }}
					</div>
				</div>

				<button class="btn btn-primary mt-4" type="submit">Modifier</button>
			</div>
		{{ form_end(form) }}
		
	</div>
{% endblock %}
