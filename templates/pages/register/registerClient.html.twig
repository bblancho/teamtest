{% extends 'base.html.twig' %}

{% block title %}Créer son compte free-lance
{% endblock %}

{% block body %}
	<div class="album py-5 connexion">
		<div class="container">
		<h1>
			Créer un compte free-lance
		</h1>

		{{ form_start(registrationForm) }}

			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						{{ form_row(registrationForm.nom) }}
					</div>

					<div class="form-group">
						{{ form_row(registrationForm.email) }}
					</div>

					<div class="form-group">
						{{ form_row(registrationForm.adresse) }}
					</div>

					<div class="form-group">
						{{ form_row(registrationForm.cp) }}
					</div>
				</div>

				<div class="col-md-6">
					<div class="form-group">
						{{ form_row(registrationForm.ville) }}
					</div>

					<div class="form-group">
						{{ form_row(registrationForm.phone) }}
					</div>

					<div class="form-group">
						{{ form_row(registrationForm.siren) }}
					</div>

					<div class="form-group">
						{{ form_row(registrationForm.password) }}
					</div>
				</div>
			</div>

			<button class="btn btn-primary mt-4" type="submit">S'inscrire en tant que Free-lance</button>

		{{ form_end(registrationForm) }}

		<div>
			<p>
				Déjà inscrit(e)?
				<a href="{{ path('security.login') }}">
					Se connecter
				</a>
			</p>
		</div>
	</div>
	</div>
	
{% endblock %}
