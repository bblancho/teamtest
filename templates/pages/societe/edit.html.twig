{% extends 'base.html.twig' %}

{% block title %}Formulaire de modification des informations personnelles
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4"> Formulaire de modification des informations personnelles </h1>

		{% for message in app.flashes('warning') %}
			<div class="alert alert-warning mt-4">
				{{ message }}
			</div>
		{% endfor %}

		{{ form_start(form) }}

			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						{{ form_label(form.nom) }}
						{{ form_widget(form.nom) }}
						<div class="form-error">
							{{ form_errors(form.nom) }}
						</div>
					</div>

					<div class="form-group">
						{{ form_label(form.secteurActivite) }}
						{{ form_widget(form.secteurActivite) }}
						<div class="form-error">
							{{ form_errors(form.secteurActivite) }}
						</div>
					</div>

					<div class="form-group">
						{{ form_label(form.siret) }}
						{{ form_widget(form.siret) }}
						<div class="form-error">
							{{ form_errors(form.siret) }}
						</div>
					</div>

					<div class="form-group">
						<img src="{{ vich_uploader_asset(user, 'imageFile') }}" alt="logo">
					</div>

					<div class="form-group">
						{{ form_label(form.adresse) }}
						{{ form_widget(form.adresse) }}
						<div class="form-error">
							{{ form_errors(form.adresse) }}
						</div>
					</div>

					<div class="form-group">
						{{ form_label(form.cp) }}
						{{ form_widget(form.cp) }}
						<div class="form-error">
							{{ form_errors(form.cp) }}
						</div>
					</div>

					<div class="form-group">
						{{ form_label(form.ville) }}
						{{ form_widget(form.ville) }}
						<div class="form-error">
							{{ form_errors(form.ville) }}
						</div>
					</div>

				</div>

				<div class="col-md-6">
					<div class="form-group">
						{{ form_label(form.description) }}
						{{ form_widget(form.description) }}
						<div class="form-error">
							{{ form_errors(form.description) }}
						</div>
					</div>

					<div class="form-group">
						{{ form_label(form.phone) }}
						{{ form_widget(form.phone) }}
						<div class="form-error">
							{{ form_errors(form.phone) }}
						</div>
					</div>

					<div class="form-group">
						{{ form_label(form.nomContact) }}
						{{ form_widget(form.nomContact) }}
						<div class="form-error">
							{{ form_errors(form.nomContact) }}
						</div>
					</div>

					<div class="form-group">
						{{ form_label(form.phoneContact) }}
						{{ form_widget(form.phoneContact) }}
						<div class="form-error">
							{{ form_errors(form.phoneContact) }}
						</div>
					</div>

					<div class="form-group">
							{{ form_label(form.isNewsletter) }}
							{{ form_widget(form.isNewsletter) }}
						<div class="form-error">
							{{ form_errors(form.isNewsletter) }}
						</div>
					</div>

					<div class="form-group mt-4">
						<button class="btn btn-lg btn-primary" type="submit">
							Modifier
						</button>
					</div>
				</div>
			</div>
			
		{{ form_rest(form) }}
		{{ form_end(form) }}
	</div>
{% endblock %}
